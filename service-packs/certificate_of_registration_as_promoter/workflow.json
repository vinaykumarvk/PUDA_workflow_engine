    { "transitionId": "VO_REJECT", "fromStateId": "PENDING_AT_VERIFICATION_OFFICER", "toStateId": "REJECTED", "trigger": "manual", "allowedSystemRoleIds": ["VERIFICATION_OFFICER"], "actions": ["RECORD_DECISION"] },

