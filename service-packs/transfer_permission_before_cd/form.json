              "type": "string",
              "required": true,
              "ui": { "widget": "upn-picker" }
            },
            {
              "key": "property.area_sqyd",
              "label": "Area (Sq. Yards)",
              "label_hi": "क्षेत्रफल (वर्ग गज)",
              "label_pa": "ਖੇਤਰਫਲ (ਵਰਗ ਗਜ਼)",
              "type": "number",
              "required": false,
              "ui": { "fillFromProperty": "area_sqyd" }
            },
            {
              "key": "property.authority_name",
              "label": "Authority Name",
              "label_hi": "प्राधिकरण का नाम",
              "label_pa": "ਅਥਾਰਟੀ ਦਾ ਨਾਮ",
              "type": "string",
              "required": false,
              "ui": { "fillFromProperty": "authority_id" }
            },
            {
              "key": "property.plot_no",
              "label": "Plot Number",
              "label_hi": "प्लॉट नंबर",
              "label_pa": "ਪਲਾਟ ਨੰਬਰ",
              "type": "string",
              "required": false,
              "ui": { "fillFromProperty": "property_number" }
            },
            {
              "key": "property.type",
              "label": "Property Type",
              "label_hi": "संपत्ति का प्रकार",
              "label_pa": "ਜਾਇਦਾਦ ਦੀ ਕਿਸਮ",
              "type": "enum",
              "required": false,
              "ui": {
                "fillFromProperty": "usage_type",
                "options": [
                  { "value": "RESIDENTIAL", "label": "Residential" },
                  { "value": "COMMERCIAL", "label": "Commercial" },
                  { "value": "INDUSTRIAL", "label": "Industrial" }
