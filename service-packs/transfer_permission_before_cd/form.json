              }
            },
            {
              "key": "property.scheme_name",
              "label": "Scheme Name",
              "label_hi": "योजना का नाम",
              "label_pa": "ਸਕੀਮ ਦਾ ਨਾਮ",
              "type": "string",
              "required": false,
              "ui": { "fillFromProperty": "scheme_name" }
            },
            {
              "key": "property.reserved_price",
              "label": "Reserved Price",
              "label_hi": "आरक्षित मूल्य",
              "label_pa": "ਰਾਖਵੀਂ ਕੀਮਤ",
              "type": "number",
              "required": false,
              "ui": { "fillFromProperty": "reserved_price" }
            },
            {
              "key": "property.sale_type",
              "label": "Sale Type",
              "label_hi": "बिक्री का प्रकार",
              "label_pa": "ਵਿਕਰੀ ਦੀ ਕਿਸਮ",
              "type": "enum",
              "required": false,
              "ui": {
                "fillFromProperty": "sale_type",
                "options": [
                  { "value": "FREEHOLD", "label": "Freehold" },
                  { "value": "LEASEHOLD", "label": "Leasehold" }
                ]
              }
            },
            {
              "key": "property.usage_type",
              "label": "Usage Type",
              "label_hi": "उपयोग प्रकार",
              "label_pa": "ਵਰਤੋਂ ਦੀ ਕਿਸਮ",
              "type": "enum",
              "required": false,
              "ui": {
                "fillFromProperty": "usage_type",
                "options": [
                  { "value": "RESIDENTIAL", "label": "Residential" },
                  { "value": "COMMERCIAL", "label": "Commercial" },
                  { "value": "INDUSTRIAL", "label": "Industrial" },
                  { "value": "INSTITUTIONAL", "label": "Institutional" }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "pageId": "PAGE_PURCHASER_DETAILS",
      "title": "Purchaser / Transferee Details",
      "title_hi": "क्रेता / हस्तांतरी विवरण",
