              "required": false,
              "ui": {
                "fillFromProperty": "property_number"
              }
            },
            {
              "key": "property.type",
              "label": "Property Type",
              "type": "enum",
              "required": false,
              "ui": {
                "fillFromProperty": "usage_type",
                "options": [
                  {
                    "value": "RESIDENTIAL",
                    "label": "Residential"
                  },
                  {
                    "value": "COMMERCIAL",
                    "label": "Commercial"
                  },
                  {
                    "value": "INDUSTRIAL",
                    "label": "Industrial"
                  }
                ]
              }
            },
            {
              "key": "property.scheme_name",
              "label": "Scheme Name",
              "type": "string",
              "required": false,
              "ui": {
                "fillFromProperty": "scheme_name"
              }
            }
