      "sections": [
        {
          "sectionId": "SEC_AUTHORITY",
          "title": "Authority",
          "title_hi": "प्राधिकरण",
          "title_pa": "ਅਥਾਰਟੀ",
          "fields": [
            {
              "key": "authority_id",
              "label": "Select Authority",
              "label_hi": "प्राधिकरण चुनें",
              "label_pa": "ਅਥਾਰਟੀ ਚੁਣੋ",
              "type": "enum",
              "required": true,
              "ui": {
                "widget": "select",
                "options": [
                  { "value": "PUDA", "label": "PUDA" },
                  { "value": "GMADA", "label": "GMADA" },
                  { "value": "GLADA", "label": "GLADA" },
                  { "value": "BDA", "label": "BDA" }
                ],
                "fillFromProperty": "authority_id"
              }
            }
          ]
        },
        {
          "sectionId": "SEC_APPLICANT",
          "title": "Applicant Details",
          "title_hi": "आवेदक विवरण",
          "title_pa": "ਅਰਜ਼ੀਕਰਤਾ ਵੇਰਵੇ",
          "fields": [
            { "sharedSection": "applicant" }
          ]
        }
      ]
    },
    {
      "pageId": "PAGE_PROPERTY",
      "title": "Property Details",
      "title_hi": "संपत्ति विवरण",
      "title_pa": "ਜਾਇਦਾਦ ਵੇਰਵੇ",
      "sections": [
        {
          "sectionId": "SEC_PROPERTY",
          "title": "Property Information",
          "title_hi": "संपत्ति जानकारी",
          "title_pa": "ਜਾਇਦਾਦ ਜਾਣਕਾਰੀ",
          "fields": [
            {
              "key": "property.upn",
              "label": "Unique Property Number (UPN / Bhu-Aadhar)",
              "label_hi": "विशिष्ट संपत्ति संख्या (यूपीएन / भू-आधार)",
