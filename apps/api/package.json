{
  "name": "@puda/api",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "migrate": "tsx scripts/migrate.ts",
    "seed": "tsx scripts/seed.ts",
    "audit:verify-chain": "tsx scripts/verify-audit-chain.ts",
    "cleanup:client-telemetry": "tsx scripts/cleanup-client-telemetry.ts",
    "preflight:service-packs": "tsx scripts/preflight-service-packs.ts",
    "preflight:runtime-adapters": "tsx scripts/preflight-runtime-adapters.ts",
    "check:endpoint-matrix": "tsx scripts/check-endpoint-matrix.ts",
    "check:openapi": "tsx scripts/check-openapi.ts",
    "check:openapi:contracts": "tsx scripts/check-openapi-contract.ts",
    "test": "vitest run",
    "test:critical": "vitest run --config vitest.critical.config.ts",
    "test:authz": "vitest run src/authz.integration.test.ts",
    "test:brd": "vitest run src/brd-test-cases.test.ts",
    "test:feature-flags": "vitest run src/feature-flags.integration.test.ts",
    "test:load": "tsx scripts/load-smoke.ts",
    "test:rest": "vitest run --exclude src/authz.integration.test.ts --exclude src/brd-test-cases.test.ts",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/multipart": "^9.4.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.70.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.212.0",
    "@opentelemetry/instrumentation-fastify": "^0.56.0",
    "@opentelemetry/sdk-node": "^0.212.0",
    "@puda/shared": "^0.1.0",
    "@types/qrcode": "^1.5.6",
    "argon2": "^0.44.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.7.4",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^8.0.0",
    "pdfkit": "^0.15.2",
    "pg": "^8.11.5",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "redis": "^4.7.1",
    "uuid": "^9.0.1",
    "yaml": "^2.4.2"
  },
  "devDependencies": {
    "@types/form-data": "^2.2.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^7.0.9",
    "@types/pdfkit": "^0.13.9",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@vitest/coverage-v8": "^2.1.9",
    "autocannon": "^8.0.0",
    "form-data": "^4.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.0"
  }
}
